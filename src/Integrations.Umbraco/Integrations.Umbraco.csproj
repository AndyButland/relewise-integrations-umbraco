<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<AssemblyName>Relewise.Integrations.Umbraco</AssemblyName>
		<RootNamespace>Relewise.Integrations.Umbraco</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Relewise.Client" Version="1.10.0" />
		<PackageReference Include="Umbraco.Cms.Web.Website" version="9.0.1" />
		<PackageReference Include="Umbraco.Cms.Web.BackOffice" version="9.0.1" />
		<PackageReference Include="Umbraco.Cms.Web.Common" version="9.0.1" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="App_Plugins\Relewise.Dashboard\**\*.*">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<PackagePath>App_Plugins\Relewise.Dashboard\</PackagePath>
		</Content>
		<None Include="build\**\*.*">
			<Pack>True</Pack>
			<PackagePath>buildTransitive</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Content Include="App_Plugins\**\*.*">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>Always</CopyToPublishDirectory>
		</Content>
	</ItemGroup>
</Project>
